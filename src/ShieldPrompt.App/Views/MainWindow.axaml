<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ShieldPrompt.App.ViewModels"
        xmlns:views="using:ShieldPrompt.App.Views"
        xmlns:presentation="using:ShieldPrompt.Presentation.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="ShieldPrompt.App.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ShieldPrompt - Secure AI Prompt Generation"
        Width="1200" Height="700">

    <Window.KeyBindings>
        <KeyBinding Gesture="Ctrl+O" Command="{Binding OpenFolderCommand}"/>
        <KeyBinding Gesture="Ctrl+C" Command="{Binding CopyToClipboardCommand}"/>
        <KeyBinding Gesture="Ctrl+V" Command="{Binding OpenPasteRestoreDialogCommand}"/>
        <KeyBinding Gesture="Ctrl+R" Command="{Binding OpenFolderCommand}"/>
        <KeyBinding Gesture="F5" Command="{Binding OpenFolderCommand}"/>
        <KeyBinding Gesture="Ctrl+Z" Command="{Binding UndoCommand}"/>
        <KeyBinding Gesture="Ctrl+Y" Command="{Binding RedoCommand}"/>
        <KeyBinding Gesture="Ctrl+Shift+Z" Command="{Binding RedoCommand}"/>
    </Window.KeyBindings>

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Folder..." 
                          Command="{Binding OpenFolderCommand}"
                          InputGesture="Ctrl+O"/>
                <MenuItem Header="_Refresh" 
                          Command="{Binding OpenFolderCommand}"
                          InputGesture="F5"/>
                <Separator/>
                <MenuItem Header="_Copy to Clipboard" 
                          Command="{Binding CopyToClipboardCommand}"
                          InputGesture="Ctrl+C"/>
                <MenuItem Header="_Paste &amp; Restore..." 
                          Command="{Binding OpenPasteRestoreDialogCommand}"
                          InputGesture="Ctrl+V"/>
                <Separator/>
                <MenuItem Header="E_xit" 
                          Command="{Binding ExitCommand}"
                          InputGesture="Alt+F4"/>
            </MenuItem>
            
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" 
                          Command="{Binding UndoCommand}"
                          InputGesture="Ctrl+Z"/>
                <MenuItem Header="_Redo" 
                          Command="{Binding RedoCommand}"
                          InputGesture="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="Select _All Files" 
                          Command="{Binding SelectAllCommand}"/>
                <MenuItem Header="_Deselect All Files" 
                          Command="{Binding DeselectAllCommand}"/>
            </MenuItem>
            
            <MenuItem Header="_View">
                <MenuItem Header="Show _Shield Preview" 
                          Command="{Binding ToggleShieldPreviewCommand}"
                          InputGesture="Ctrl+Shift+S"/>
                <MenuItem Header="Show _Status Bar" 
                          Command="{Binding ToggleStatusBarCommand}"/>
                <MenuItem Header="Show _Toolbar" 
                          Command="{Binding ToggleToolbarCommand}"/>
                <Separator/>
                <MenuItem Header="_Increase Font Size" 
                          Command="{Binding IncreaseFontSizeCommand}"/>
                <MenuItem Header="_Decrease Font Size" 
                          Command="{Binding DecreaseFontSizeCommand}"/>
                <MenuItem Header="_Reset Font Size" 
                          Command="{Binding ResetFontSizeCommand}"/>
            </MenuItem>
            
            <MenuItem Header="_Tools">
                <MenuItem Header="_Load Tutorial Project" 
                          Command="{Binding LoadTutorialProjectCommand}"
                          InputGesture="Ctrl+T"/>
                <MenuItem Header="_Clear Session" 
                          Command="{Binding ClearSessionCommand}"/>
                <Separator/>
                <MenuItem Header="_Diagnostics..." 
                          Command="{Binding ShowDiagnosticsCommand}"/>
                <MenuItem Header="_View Logs..." 
                          Command="{Binding ViewLogsCommand}"/>
            </MenuItem>
            
            <MenuItem Header="_Help">
                <MenuItem Header="_User Guide" 
                          Command="{Binding OpenUserGuideCommand}"
                          InputGesture="F1"/>
                <MenuItem Header="_Tutorial" 
                          Command="{Binding OpenTutorialCommand}"/>
                <MenuItem Header="_Keyboard Shortcuts" 
                          Command="{Binding ShowKeyboardShortcutsCommand}"/>
                <Separator/>
                <MenuItem Header="_View on GitHub" 
                          Command="{Binding OpenGitHubCommand}"/>
                <MenuItem Header="_Check for Updates" 
                          Command="{Binding CheckForUpdatesCommand}"/>
                <Separator/>
                <MenuItem Header="_About ShieldPrompt" 
                          Command="{Binding ShowAboutDialogCommand}"/>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="10"
                    IsVisible="{Binding ShowToolbar}">
            <!-- Icon-only action buttons with tooltips -->
            <Button Content="ðŸ“" 
                    Command="{Binding OpenFolderCommand}"
                    ToolTip.Tip="Open Folder (Ctrl+O)"
                    FontSize="18"
                    Width="40"
                    Height="40"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="0"/>
            <Button Content="ðŸ”„" 
                    Command="{Binding OpenFolderCommand}"
                    ToolTip.Tip="Refresh (F5)"
                    FontSize="18"
                    Width="40"
                    Height="40"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="0"/>
            <Button Content="ðŸ“¥"
                    Command="{Binding OpenPasteRestoreDialogCommand}"
                    ToolTip.Tip="Paste &amp; Restore (Ctrl+V)"
                    FontSize="18"
                    Width="40"
                    Height="40"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Padding="0"/>
            <Separator Width="1" Height="30"/>
            <TextBlock Text="Format:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox ItemsSource="{Binding AvailableFormatters}"
                      SelectedItem="{Binding SelectedFormatter}"
                      ToolTip.Tip="Choose output format for the prompt"
                      Width="120">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding FormatName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            
            <!-- Format Info Button with Popup -->
            <Button Width="24" Height="24" 
                    Margin="4,0,0,0"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0"
                    IsVisible="{Binding !!SelectedFormatMetadata}"
                    ToolTip.Tip="Click for format pros and cons">
                <Button.Flyout>
                    <Flyout>
                        <StackPanel Width="350" Spacing="10">
                            <TextBlock Text="{Binding SelectedFormatMetadata.Name, StringFormat='{}{0} Format'}"
                                       FontWeight="Bold"
                                       FontSize="14"/>
                            <TextBlock Text="{Binding SelectedFormatMetadata.Description}"
                                       TextWrapping="Wrap"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            
                            <!-- Pros Section -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="âœ… PROS:" 
                                           FontWeight="SemiBold"
                                           Foreground="Green"/>
                                <ItemsControl ItemsSource="{Binding SelectedFormatMetadata.Pros}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding StringFormat='â€¢ {0}'}"
                                                       TextWrapping="Wrap"
                                                       Margin="10,0,0,2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            
                            <!-- Cons Section -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="âš ï¸ CONS:" 
                                           FontWeight="SemiBold"
                                           Foreground="Orange"/>
                                <ItemsControl ItemsSource="{Binding SelectedFormatMetadata.Cons}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding StringFormat='â€¢ {0}'}"
                                                       TextWrapping="Wrap"
                                                       Margin="10,0,0,2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            
                            <!-- Recommended For Section -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="ðŸ’¡ RECOMMENDED FOR:" 
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                <TextBlock Text="{Binding SelectedFormatMetadata.RecommendedFor}"
                                           TextWrapping="Wrap"
                                           Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Flyout>
                </Button.Flyout>
                <TextBlock Text="â„¹ï¸" FontSize="16" VerticalAlignment="Center"/>
            </Button>
            
            <TextBlock Text="Model:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox ItemsSource="{Binding AvailableModels}"
                      SelectedItem="{Binding SelectedModel}"
                      ToolTip.Tip="Select AI model for token limit calculation"
                      Width="150">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding DisplayName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Separator Width="1" Height="30"/>
            <TextBlock Text="Analysis Mode:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox ItemsSource="{Binding AvailableRoles}"
                      SelectedItem="{Binding SelectedRole}"
                      ToolTip.Tip="Choose what type of analysis to perform on the code"
                      Width="220">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="5" ToolTip.Tip="{Binding Description}">
                            <TextBlock Text="{Binding Icon}" FontSize="14"/>
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <!-- Main Content Area with Tabs -->
        <TabControl Grid.Row="2" Margin="10,0">
            <!-- Tab 1: Prompt Builder -->
            <TabItem Header="ðŸ“ Prompt Builder">
                <Grid ColumnDefinitions="300,Auto,*" Margin="0">
            <!-- File Tree (Left Panel) -->
            <Border Grid.Column="0"
                    MinWidth="200" 
                    BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="10"
                    Margin="0,0,5,0">
                <ScrollViewer>
                    <TreeView ItemsSource="{Binding RootNodeViewModel.Children}"
                              SelectionMode="Multiple">
                        <TreeView.ItemTemplate>
                            <TreeDataTemplate ItemsSource="{Binding Children}" DataType="presentation:FileNodeViewModel">
                                <StackPanel Orientation="Horizontal" Spacing="5">
                                    <CheckBox IsChecked="{Binding IsSelected}"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Icon}" 
                                               VerticalAlignment="Center"
                                               FontSize="14"/>
                                    <TextBlock Text="{Binding Name}" 
                                               VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding TokenCount, StringFormat='({0} tok)'}"
                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding !!TokenCount}"
                                               Margin="5,0,0,0"/>
                                </StackPanel>
                            </TreeDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </ScrollViewer>
            </Border>

            <!-- Horizontal GridSplitter (Draggable) -->
            <GridSplitter Grid.Column="1"
                          x:Name="HorizontalSplitter"
                          Width="6"
                          Background="{DynamicResource SystemControlHighlightBaseLowBrush}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          ToolTip.Tip="Drag to resize panels (double-click to reset)"
                          DoubleTapped="HorizontalSplitter_DoubleTapped">
                <GridSplitter.Styles>
                    <Style Selector="GridSplitter:pointerover">
                        <Setter Property="Background" Value="{DynamicResource SystemControlHighlightBaseMediumBrush}"/>
                        <Setter Property="Cursor" Value="SizeWestEast"/>
                    </Style>
                </GridSplitter.Styles>
            </GridSplitter>

            <!-- Preview/Output Area (Right Panel) -->
            <Border Grid.Column="2"
                    MinWidth="400"
                    BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="10"
                    Margin="5,0,0,0">
                <Grid RowDefinitions="*,Auto,*">
                    <!-- Top: Prompt Builder -->
                    <Grid Grid.Row="0" RowDefinitions="Auto,Auto,Auto,*,Auto">
                        <!-- Header -->
                        <TextBlock Grid.Row="0" 
                                   Text="Prompt Builder"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="0,0,0,10"/>
                    
                    <!-- Template Info -->
                    <Border Grid.Row="1"
                            BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Background="{DynamicResource SystemControlBackgroundAltMediumLowBrush}"
                            Padding="10"
                            Margin="0,0,0,10"
                            IsVisible="{Binding !!SelectedTemplate}">
                        <StackPanel Spacing="5">
                            <TextBlock Text="{Binding SelectedTemplate.Description}"
                                       TextWrapping="Wrap"
                                       FontSize="12"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            
                            <!-- Focus Areas (if available) -->
                            <StackPanel Spacing="5" Margin="0,5,0,0" IsVisible="{Binding HasFocusAreas}">
                                <TextBlock Text="Focus on:"
                                           FontWeight="SemiBold"
                                           FontSize="11"/>
                                <ItemsControl ItemsSource="{Binding AvailableFocusAreas}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Name}"
                                                      IsChecked="{Binding IsSelected}"
                                                      Margin="0,0,10,5"
                                                      FontSize="11"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Custom Instructions Editor -->
                    <StackPanel Grid.Row="2" Spacing="5" Margin="0,0,0,10">
                        <TextBlock Text="Custom Instructions:"
                                   FontWeight="SemiBold"
                                   FontSize="12"/>
                        <TextBox Text="{Binding CustomInstructions}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 MinHeight="60"
                                 MaxHeight="120"
                                 Watermark="Enter any specific instructions or context for the AI..."
                                 ToolTip.Tip="Add custom context, describe issues, or specify what you want the AI to focus on"/>
                        <TextBlock Text="{Binding CustomInstructions.Length, StringFormat='{}{0} characters'}"
                                   FontSize="10"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   HorizontalAlignment="Right"/>
                    </StackPanel>

                    <!-- Info Text -->
                    <ScrollViewer Grid.Row="3">
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   FontSize="11">
                            <Run Text="ðŸ’¡ Select files, choose task, add instructions."/>
                            <LineBreak/>
                            <Run Text="Preview updates automatically below."/>
                        </TextBlock>
                    </ScrollViewer>

                    <Button Grid.Row="4"
                            Content="ðŸ“‹ Generate Prompt"
                            Command="{Binding CopyToClipboardCommand}"
                            ToolTip.Tip="Compose and copy the prompt with selected template (Ctrl+C)"
                            IsEnabled="{Binding !IsLoading}"
                            HorizontalAlignment="Center"
                            Padding="30,12"
                            Margin="0,10,0,0">
                        <Button.Styles>
                            <Style Selector="Button:disabled">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </Grid>

                <!-- Vertical GridSplitter -->
                <GridSplitter Grid.Row="1"
                              x:Name="VerticalSplitter"
                              Height="6"
                              Background="{DynamicResource SystemControlHighlightBaseLowBrush}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              ToolTip.Tip="Drag to resize (double-click to reset)"
                              DoubleTapped="VerticalSplitter_DoubleTapped">
                    <GridSplitter.Styles>
                        <Style Selector="GridSplitter:pointerover">
                            <Setter Property="Background" Value="{DynamicResource SystemControlHighlightBaseMediumBrush}"/>
                            <Setter Property="Cursor" Value="SizeNorthSouth"/>
                        </Style>
                    </GridSplitter.Styles>
                </GridSplitter>

                <!-- Bottom: Live Preview -->
                <Grid Grid.Row="2" RowDefinitions="Auto,*,Auto">
                    <StackPanel Grid.Row="0" 
                                Orientation="Horizontal" 
                                Spacing="10"
                                Margin="0,10,0,10">
                        <TextBlock Text="Live Preview"
                                   FontWeight="Bold"/>
                        <TextBlock Text="(click to copy)"
                                   FontSize="11"
                                   Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Border Grid.Row="1"
                            x:Name="LivePreviewBorder"
                            BorderBrush="{DynamicResource SystemControlHighlightBaseLowBrush}"
                            BorderThickness="2"
                            CornerRadius="4"
                            Background="{DynamicResource SystemControlBackgroundAltMediumLowBrush}"
                            Padding="10"
                            Cursor="Hand"
                            ToolTip.Tip="Click to copy entire preview to clipboard"
                            PointerPressed="LivePreviewBorder_PointerPressed">
                        <Border.Styles>
                            <!-- Hover effect -->
                            <Style Selector="Border:pointerover">
                                <Setter Property="BorderBrush" Value="{DynamicResource SystemControlHighlightAccentBrush}"/>
                            </Style>
                            <!-- Copy flash animation -->
                            <Style Selector="Border.copyFlash">
                                <Setter Property="BorderBrush" Value="Green"/>
                                <Setter Property="BorderThickness" Value="3"/>
                            </Style>
                        </Border.Styles>
                        <ScrollViewer>
                            <TextBlock Text="{Binding LivePreview}"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas,Menlo,monospace"
                                       FontSize="11"
                                       Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </ScrollViewer>
                    </Border>

                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                Spacing="10" 
                                Margin="0,5,0,0"
                                HorizontalAlignment="Right">
                        <TextBlock Text="{Binding PreviewTokenCount, StringFormat='{}{0:N0} tokens'}"
                                   FontSize="11"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="âš ï¸ Near limit"
                                   FontSize="11"
                                   Foreground="Orange"
                                   VerticalAlignment="Center"
                                   IsVisible="{Binding ShowTokenWarning}"/>
                    </StackPanel>
                </Grid>
            </Grid>
            </Border>
        </Grid>
            </TabItem>
            
            <!-- Tab 2: LLM Response -->
            <TabItem Header="ðŸ“‹ LLM Response">
                <views:LlmResponseView DataContext="{Binding $parent[Window].DataContext.LlmResponseViewModel}"/>
            </TabItem>
            
            <!-- Tab 3: Role Editor -->
            <TabItem Header="ðŸŽ­ Role Editor">
                <views:RoleEditorView DataContext="{Binding $parent[Window].DataContext.RoleEditorViewModel}"/>
            </TabItem>
            
            <!-- Tab 4: Output Format Settings -->
            <TabItem Header="âš™ï¸ Settings">
                <views:OutputFormatSettingsView DataContext="{Binding $parent[Window].DataContext.OutputFormatSettingsViewModel}"/>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                Padding="10,8">
            <Grid ColumnDefinitions="Auto,Auto,*,Auto">
                <!-- Loading Indicator -->
                <Border Grid.Column="0"
                        Width="16" Height="16"
                        Margin="0,0,10,0"
                        IsVisible="{Binding IsLoading}">
                    <TextBlock Text="â³" FontSize="14" VerticalAlignment="Center"/>
                </Border>

                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusText}"
                           VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal" 
                            Spacing="15">
                    <TextBlock VerticalAlignment="Center" 
                               Text="{Binding SelectedFileCount, StringFormat='{}{0} files'}"
                               ToolTip.Tip="Number of files selected"/>
                    <TextBlock VerticalAlignment="Center" 
                               Text="{Binding SanitizedValueCount, StringFormat='ðŸ” {0} masked'}"
                               ToolTip.Tip="Number of sensitive values replaced with aliases"
                               IsVisible="{Binding !!SanitizedValueCount}"/>
                    <TextBlock VerticalAlignment="Center" 
                               Text="{Binding TotalTokens, StringFormat='{}{0:N0} tokens'}"
                               ToolTip.Tip="Total token count for selected model"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

</Window>
